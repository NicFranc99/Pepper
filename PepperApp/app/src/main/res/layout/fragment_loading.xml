<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/text_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/loading"
        android:textSize="60sp"
        android:textColor="@color/black"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/pepper_retail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/sfondo"
        android:contentDescription="@string/item_name"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/return_logo"
        android:layout_width="200dp"
        android:padding="20dp"
        android:background="@drawable/ui_circle_grad_blue"
        android:src="@drawable/ic_resizable_family"
        android:layout_height="200dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/shopping_logo"
        android:layout_width="200dp"
        android:padding="30dp"
        android:background="@drawable/ui_circle_grad_blue"
        android:src="@drawable/ic_resizable_videocall"
        android:layout_height="200dp"
        android:contentDescription="@string/item_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/qrcode_logo"
        android:layout_width="200dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/ui_circle_grad_blue"
        android:src="@drawable/ic_resizable_home"
        android:layout_height="200dp"
        android:padding="20dp"
        android:contentDescription="@string/item_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>