<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvvisoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3B4044"
        android:fontFamily="sans-serif-black" />

     <TextView
        android:id="@+id/textInArrivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:paddingBottom="20dp"
        android:text="Chiamata in arrivo per"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp" />

   <ImageView
        android:id="@+id/imgMittente"
        android:layout_width="276dp"
        android:layout_height="240dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="140dp" />

       <ImageView
        android:id="@+id/imgDestinatario"
        android:layout_width="276dp"
        android:layout_height="240dp"
        android:layout_marginLeft="550dp"
        android:layout_marginTop="140dp" />
    
     <Button
        android:id="@+id/accetta"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="420dp"
        android:background="@color/green_rating_start"
        android:text="ACCETTA"
        app:icon="@android:drawable/sym_call_outgoing" />
    

   <Button
        android:id="@+id/rifiuta"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="500dp"
        android:background="@color/red"
        android:text="RIFIUTA"
        app:icon="@android:drawable/sym_call_missed" />


</FrameLayout>
