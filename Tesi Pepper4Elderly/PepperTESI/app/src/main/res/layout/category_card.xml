<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/category_not_focused">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_category"
            style="@style/SingleLineCardTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIM_TEXT_PADDING"
            android:layout_marginTop="@dimen/DIM_TEXT_PADDING"
            android:text="TESTO DI PROVA"
            android:textSize="@dimen/DIM_TEXT_CAT2" />

        <ImageView
            android:id="@+id/img_category"
            android:layout_width="@dimen/CARD_WIDTH"
            android:layout_height="@dimen/CARD_HEIGHT"
            android:padding="@dimen/IMAGE_PADDING"
            android:src="@drawable/categorizzazione" />

        <TextView
            android:id="@+id/txt_game"
            style="@style/SingleLineCardTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/DIM_TEXT_PADDING"
            android:text="Frutti estivi"
            android:textSize="@dimen/DIM_TEXT_CAT" />

    </LinearLayout>


</FrameLayout>