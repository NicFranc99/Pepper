            <ImageView
                android:id="@+id/img_racconto"
                android:layout_width="450dp"
                android:layout_height="400dp"
                android:contentDescription="casd"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvContent"

                />
            </LinearLayout>

        <com.example.pepperapp28aprile.VerticalScrollingTextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_racconto"
            android:layout_alignBottom="@+id/btnvaidomande"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/img_racconto"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="10"
            android:paddingLeft="500dp"
            android:scrollbars="vertical"
            android:layout_marginBottom="80dp"
            android:scrollHorizontally="false"
            android:text="sadasd"
            android:textAlignment="inherit"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/black"
            android:textSize="@dimen/DIM_TEXT_CAT3"
            app:layout_constraintTop_toBottomOf="@+id/btnvaidomande" />
    </com.google.android.material.card.MaterialCardView>



