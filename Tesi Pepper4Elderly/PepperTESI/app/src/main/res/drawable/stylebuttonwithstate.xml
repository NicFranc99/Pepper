<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#9FFFFFFF">
  <item>
        <selector>

            <item android:state_focused="true">
<!--                <color android:color="@color/category_no_focused" />-->
                <shape>
                    <solid android:color="@color/blue_dark"/>
                    <stroke android:width="4dp" android:color="@color/category_focused_stroke"/>

                      <corners android:radius="@dimen/RADIUS_ANGLE_BUTTON"/>

                </shape>
            </item>


            <item>
                <shape>
                    <solid android:color="@color/blue_vibrant"/>
                    <corners android:radius="@dimen/RADIUS_ANGLE_BUTTON"/>
                </shape>
            </item>
        </selector>

    </item>


</ripple>