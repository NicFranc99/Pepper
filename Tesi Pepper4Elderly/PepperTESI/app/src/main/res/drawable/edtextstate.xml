<?xml version="1.0" encoding="utf-8"?>

<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape
            android:shape="rectangle" android:padding="15dp">
                    <solid android:color="@color/category_focused_stroke"/>
                    <stroke android:width="4dp" android:color="@color/category_focused"/>
                    <corners android:radius="@dimen/RADIUS_ANGLE_BUTTON"/>
        </shape>
    </item>


    <item>
        <shape
            android:shape="rectangle" android:padding="15dp">
            <solid android:color="@color/category_focused_stroke"/>
            <corners android:radius="@dimen/RADIUS_ANGLE_BUTTON"/>
            <stroke android:width="3dp"  android:color="@color/category_no_focused"/>
        </shape>
    </item>
 </selector>

